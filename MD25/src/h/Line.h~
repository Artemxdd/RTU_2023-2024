#include <cstdint>
#include <cstddef>

const uint8_t MAX_TEXT_SIZE{ 81 };

class Line {
public:
  Line() { lastChar_ = &text_[0]; };
  ~Line() { delete[] text_; };

  size_t size() const { return size_; };
  //  void clear();
  //  bool empty() const;
  void push_back(const char& chr);
  const char* data() const { return this->text_; };
  char* getLastChar() { return this->lastChar_; };
  
private:
  char* text_ = new char[MAX_TEXT_SIZE];
  char* lastChar_{ nullptr };
  size_t size_{ 0 };
};
